cellBorder = 1px solid lightgray
highlight = lightblue
queryListWidth = 23rem
monospaceSize = 95%

body
  margin 1.5em
  max-width 1100px

code
  font-family monospace

h1, h2, h3
  margin 0 0 1.5ex 0
  font-style bold

h1
  font-size 145%
  background highlight
  padding 4px

h2
  font-size 135%

h3
  font-size 110%

input[type="text"]
  font-family monospace
  font-size monospaceSize

p
  margin-top 0

table
  margin-bottom 1.5em
  border-collapse collapse

td, th
  border-top cellBorder
  border-bottom cellBorder
  padding 0.75ex 1.5ex
  vertical-align middle
  &:first-child
    border-left cellBorder
    padding-left 1em
  &:last-child
    border-right cellBorder

th
  font-weight bold

ul
  margin-bottom 1.25em

.desc
  width 60%
  font-size 94%

.json
  overflow auto

td
  &.name, &.type
    font-family monospace
    font-size monospaceSize

.modal-body
  overflow-y auto
  max-height calc(100vh - 125px)

.notfound
  font-style italic

.queryLink
  display block
  color blue
  text-decoration none
  font-size monospaceSize
  font-family monospace
  &:hover
    color blue
    background-color highlight
    text-decoration underline
  &.active
    background-color highlight

.reqParam
  width 20%

.typeDescription
  margin 0 6em
  span, p
    display inline-block
    width 45em

#query
  padding-left (queryListWidth + 1.5)
  margin-bottom 2.5em
  > div
    margin-bottom 1em

#queryList
  position absolute
  width queryListWidth
  padding 1ex
  border cellBorder

#resFields
  td, th
    border cellBorder

#submit
  float right

#summary
  font-size 120%
