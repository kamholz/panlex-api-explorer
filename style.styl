cellBorder = 1px solid lightgray
highlight = lightblue

monospace()
  font-family monospace
  font-size 95%

prewrap()
  word-wrap break-word
  white-space -moz-pre-wrap
  white-space pre-wrap

// global element styles

body
  margin 1.5em
  max-width 1100px

code
  color black

h1, h2, h3
  margin 0 0 1.5ex 0
  font-weight bold

h1
  font-size 145%
  background highlight
  padding 4px

h2
  font-size 135%

h3
  font-size 110%

input[type="text"]
  monospace()

p
  margin-top 0

table
  margin-bottom 1.5em
  border-collapse collapse

td, th
  border-top cellBorder
  border-bottom cellBorder
  padding 0.75ex 1.5ex
  vertical-align middle !important
  &:first-child
    border-left cellBorder
    padding-left 1em
  &:last-child
    border-right cellBorder

th
  font-weight bold

ul
  margin-bottom 1.25em

// classes

.accordion-toggle
  text-decoration none
  &:hover
    text-decoration underline
  &:after
    content "hide"
  &.collapsed:after
    content "show"

.caret
  display inline-block
  margin-left 0.5ex

.desc
  width 60%
  font-size 95%

.dropdown
  display inline-block

.dropdown-menu
  overflow-y auto
  a
    monospace()

.glyphicon-info-sign
  margin-left 0.5ex
  vertical-align middle
  top 0
  &:hover
    cursor pointer

td
  &.name, &.type
    monospace()
    white-space nowrap

.modal-body
  overflow-y auto

.popover-lg
  max-height 65vh
  max-width 450px
  overflow-y auto

.popover-title code
  background-color inherit

.queryLink
  display block
  color blue
  text-decoration none
  monospace()
  &:hover
    color blue
    background-color highlight
    text-decoration underline
  &.active
    background-color highlight

.reqParam
  width 20%

// individual elements

#queryInfo
  margin-bottom 2.5em
  > div
    margin-bottom 1em

#queryModal pre
  prewrap()

#resFields
  td, th
    border cellBorder

#submit
  float right

#summary
  font-size 120%
  z-index -1

#summaryDropdown
  display inline

// media queries

@media (max-width 768px)
  .desc
    width 45%

  td, th
    &.name, &.type
      white-space normal
      word-break break-all
      width 20%

  .popover
    max-height 50vh
    max-width 50vw
    overflow-y auto

  .reqParam
    width 15%

  #queryInfo
    padding-left 0
