cellBorder = 1px solid lightgray
highlight = lightblue
queryListWidth = 12rem

body
  margin 1.5em
  max-width 1000px

code
  font-family monospace

h1, h2, h3
  margin 0 0 2ex 0
  font-style bold

h1
  font-size 130%
  background highlight

h2
  font-size 120%

h3
  font-size 100%

input[type="text"]
  font-family monospace
  width 100%

p
  margin-top 0

table
  margin-bottom 1.5em
  border-collapse collapse

td, th
  border-top cellBorder
  border-bottom cellBorder
  padding 0.75ex 1.5ex
  vertical-align middle
  text-align left
  &:first-child
    border-left cellBorder
    padding-left 1em
  &:last-child
    border-right cellBorder

th
  font-weight bold

.desc
  width 60%
  font-size 92%

.error
  background-color pink

.input
  width 17%

td
  &.name, &.type
    font-family monospace

.notfound
  font-style italic

.queryLink
  display block
  color blue
  text-decoration none
  margin 0 0.75ex 0.75ex 0

.queryLink
  &:hover
    background-color highlight
    text-decoration underline
  .active
    background-color highlight

.typeDescription
  span, p
    display inline-block
    width 45em

#query
  padding-left (queryListWidth + 1)
  margin-bottom 2.5em

#queryList
  position absolute
  width queryListWidth
  a
    font-family monospace
    font-size 97%

#reqParams
  margin-bottom 1em

#resFields
  td, th
    border cellBorder

#submit
  float right
