cellBorder = 1px solid lightgray
highlight = lightblue
queryTypesWidth = 23rem

monospace()
  font-family monospace
  font-size 95%

prewrap()
  word-wrap break-word
  white-space -moz-pre-wrap
  white-space pre-wrap

// global element styles

body
  margin 1.5em
  max-width 1100px

h1, h2, h3
  margin 0 0 1.5ex 0
  font-weight bold

h1
  font-size 145%
  background highlight
  padding 4px

h2
  font-size 135%

h3
  font-size 110%

input[type="text"]
  monospace()

p
  margin-top 0

table
  margin-bottom 1.5em
  border-collapse collapse

td, th
  border-top cellBorder
  border-bottom cellBorder
  padding 0.75ex 1.5ex
  vertical-align middle !important
  &:first-child
    border-left cellBorder
    padding-left 1em
  &:last-child
    border-right cellBorder

th
  font-weight bold

ul
  margin-bottom 1.25em

// classes

.accordion-toggle
  text-decoration none
  &:hover
    text-decoration underline
  &:after
    content "hide"
  &.collapsed:after
    content "show"

.desc
  width 60%
  font-size 95%

.dropdown
  display inline-block

.glyphicon-info-sign
  margin-left 0.5ex
  vertical-align middle
  top 0
  &:hover
    cursor pointer

td
  &.name, &.type
    monospace()
    white-space nowrap

.modal-body
  overflow-y auto
  max-height calc(100vh - 125px)

.popover-lg
  max-height 65vh
  max-width 450px
  overflow-y auto

.popover-title code
  color black
  background-color inherit

.queryLink
  display block
  color blue
  text-decoration none
  monospace()
  &:hover
    color blue
    background-color highlight
    text-decoration underline
  &.active
    background-color highlight

.reqParam
  width 20%

// individual elements

#queryInfo
  padding-left (queryTypesWidth + 1.5)
  margin-bottom 2.5em
  > div
    margin-bottom 1em

#queryModal pre
  prewrap()

#queryTypesDesktop
  position absolute
  width queryTypesWidth
  padding 1ex
  border cellBorder

#resFields
  td, th
    border cellBorder

#submit
  float right

#summary
  font-size 120%

#summaryMobile
  display none

// media queries

@media (max-width 768px)
  .desc
    width 40%
  #queryInfo
    padding-left 0
  #queryTypesDesktop, #summaryDesktop
    display none
  #summaryMobile
    display block
