@import "bootstrap/bootstrap.min.css"
@import "bootstrap/bootstrap-theme.min.css"

cellBorder = 1px solid lightgray
highlight = lightblue
queryTypesWidth = 23rem

monospace()
  font-family monospace
  font-size 95%

// global element styles

body
  margin 1.5em
  max-width 1100px

h1, h2, h3
  margin 0 0 1.5ex 0
  font-style bold

h1
  font-size 145%
  background highlight
  padding 4px

h2
  font-size 135%

h3
  font-size 110%

input[type="text"]
  monospace()

p
  margin-top 0

table
  margin-bottom 1.5em
  border-collapse collapse

td, th
  border-top cellBorder
  border-bottom cellBorder
  padding 0.75ex 1.5ex
  vertical-align middle
  &:first-child
    border-left cellBorder
    padding-left 1em
  &:last-child
    border-right cellBorder

th
  font-weight bold

ul
  margin-bottom 1.25em

// classes

.accordion-toggle
  text-decoration none
  &:hover
    text-decoration underline
  &:after
    content "hide"
  &.collapsed:after
    content "show"

.desc
  width 60%
  font-size 95%

td
  &.name, &.type
    monospace()

.modal-body
  overflow-y auto
  max-height calc(100vh - 125px)

.queryLink
  display block
  color blue
  text-decoration none
  monospace()
  &:hover
    color blue
    background-color highlight
    text-decoration underline
  &.active
    background-color highlight

.reqParam
  width 20%

.typeDescription
  margin 0 6em

// individual elements

#queryInfo
  padding-left (queryTypesWidth + 1.5)
  margin-bottom 2.5em
  > div
    margin-bottom 1em

#queryTypes
  position absolute
  width queryTypesWidth
  padding 1ex
  border cellBorder

#queryModal pre
  word-wrap break-word
  white-space -moz-pre-wrap
  white-space pre-wrap

#resFields
  td, th
    border cellBorder

#submit
  float right

#summary
  font-size 120%
