{{#*inline "reqItem"}}
<tr>
<td class="name">{{name}}</td>
<td class="type">{{attr.type}}</td>
<td class="input"><input type="text" name="{{name}}"></td>
<td class="desc">{{{attr.desc}}}</td>
</tr>
{{/inline}}

{{#if urlParams}}
<h2>URL parameters<button id="submit">Send Request</button></h2>
<table>
<tr><th class="name">name</th><th class="input">value</th><th class="desc">description</th></tr>
{{#each urlParams as |param i|}}
  <tr>
  <td class="name">{{param.name}}</td>
  <td class="input"><input type="text" name="url_{{i}}"></td>
  <td class="desc">{{{param.attr.desc}}}</td>
  </tr>
{{/each}}
</table>
<h2>Request parameters</h2>
{{else}}
<h2>Request parameters<button id="submit">Send Request</button></h2>
{{/if}}

{{#if params}}
  <table>
  <tr><th class="name">name</th><th class="type">type</th><th class="input">JSON value</th><th class="desc">description</th></tr>
  {{#eachSorted params}}
    {{#unless attr.global}}
      {{> reqItem}}
    {{/unless}}
  {{/eachSorted}}
  </table>

  <h3>Global</h3>
  <table>
  <tr><th class="name">name</th><th class="type">type</th><th class="input">JSON value</th><th class="desc">description</th></tr>
  {{#eachSorted params}}
    {{#if attr.global}}
      {{> reqItem}}
    {{/if}}
  {{/eachSorted}}
  </table>
{{else}}
  <span class="notfound">no parameters</span>
{{/if}}
